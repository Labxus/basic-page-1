---
import Layout from "../../layouts/layout.astro";
import InfoBtnImg from "../../components/infoBtnImg.astro";
import InfoImgGraph from "../../components/infoImgGraph.astro";
import SecTextInfo from "../../components/sections/secTextInfo.astro";
import SecTextFrom from "../../components/sections/secTextFrom.astro";
import SecHandleServices from "../../components/sections/secHandleServices.astro";

import json from '../../services/data/infoPage.json'

const { learnMore,
        devoluvionSaldosInfo,
        whoHasLaw,
        becauseYouChoseUs,
        devolucionDian,
        handleOtherServices
    } = json.servicios.recuperacionSaldoFavor
---

<Layout title="RECUPERACIÃ“N DE SALDO A FAVOR">

    <div class="w-full h-auto flex flex-col gap-20">

        <!-- start section learn more -->
        <div class="w-full h-[35rem] flex flex-col justify-center items-center bg-cover bg-center gap-10 bg-[url('../../../public/imgs/fondoRecuperacion.png')] md:items-start bg-gray-700">

            <div class="md:w-96 flex flex-col justify-center items-center lg:w-[30rem] lg:ml-10">
                <p class="text-white font-bold text-3xl text-center lg:text-4xl">{learnMore.title}</p>
                <a class="px-20 py-3 text-xs bg-btnColor rounded-full text-white mx-auto transition ease-in-out hover:bg-transparent hover:text-[#203F71] hover:border hover:border-[#1CB9C8] my-10 lg:text-3xl" href="">{learnMore.textBtn}</a>
            </div>

        </div>
        <!-- end section learn more -->

        <!-- start section Devoluvion Saldos info  -->
            <SecTextInfo title = {devoluvionSaldosInfo.title}
                paragraphOne = {devoluvionSaldosInfo.paragraphOne}
                paragraphTwo = {devoluvionSaldosInfo.paragraphTwo}
                paragraphimportant = {devoluvionSaldosInfo.paragraphimportant}
                supParagraph = {devoluvionSaldosInfo.supParagraph}
                imageUrl = {devoluvionSaldosInfo.imageUrl}
                textBtn = {devoluvionSaldosInfo.textBtn}
            />
        <!-- end section  Devoluvion Saldos info -->

        <!-- start section who has law -->
            <InfoBtnImg title = {whoHasLaw.title}
                paragraph = {whoHasLaw.paragraph}
                imageUrl = {whoHasLaw.imageUrl}
                textBtn  = {whoHasLaw.textBtn}
                suptext = {whoHasLaw.suptext}
                imageUrl = {whoHasLaw.imageUrl}
                imgRight = {whoHasLaw.imgRight}
            />
        <!-- end section who has law -->

        <!-- start section because you chose us -->
            <InfoImgGraph title = {becauseYouChoseUs.title}
                paragraph = {becauseYouChoseUs.paragraph}
                supParagraph = {becauseYouChoseUs.supParagraph}
                imageUrl = {becauseYouChoseUs.imageUrl}
                imgRight = {becauseYouChoseUs.imgRight}
                percentages = {becauseYouChoseUs.percentages}
            
            />
        <!-- end section because you chose us -->

        <!-- start section devoluvion DIAN-->
            <SecTextFrom title = {devolucionDian.title}
                paragraphOne = {devolucionDian.paragraphOne}
                paragraphTwo = {devolucionDian.paragraphTwo}
                titleFrom = {devolucionDian.titleFrom}  
                supParagraphFrom = {devolucionDian.supParagraphFrom}
                infoCards = {devolucionDian.infoCards}
            />
        <!-- end section devoluvion DIAN-->


        <!-- start section handle other services-->
            <SecHandleServices title = {handleOtherServices.title}
                supParagraph = {handleOtherServices.supParagraph}
                jsonInfoHandleServices = {handleOtherServices.jsonInfoHandleServices}
            />
        <!-- end section handle other services -->

    </div>

</Layout>
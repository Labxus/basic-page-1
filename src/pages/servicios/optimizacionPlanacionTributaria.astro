---

import Layout from "../../layouts/layout.astro"

import json from '../../services/data/infoPage.json'

---


<Layout title="OPTIMIZACÍON Y PLANEACION TRIBUTARIA">

    <div class="w-screen h-auto flex flex-col justify-center items-center py-5 md:py-20">
        <div class="container mx-auto w-full h-auto flex flex-col justify-center items-center p-5 gap-10">
            <div class="flex flex-col text-center gap-5">
                <h3 class="font-bold text-4xl text-titleColor mb-4">{json.servicios.optimizacionPlanacionTributaria.title}</h3>
                <p class="font-semibold text-lg">{json.servicios.optimizacionPlanacionTributaria.paragraph}</p>
            </div>
            <div class="w-full h-[25rem]">
                <iframe width="100%" height="100%" src={json.servicios.optimizacionPlanacionTributaria.link} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
        </div>
    </div>

</Layout>
    <p class="md:text-xl font-semibold"> {address} </p>
    <p class="md:text-xl font-semibold"> {phone} </p>
    <p class="md:text-xl font-semibold"> {city} </p>

    <ul class="flex gap-5  text-3xl flex-wrap justify-center md:mt-10">
        <li><a href=""><i class="ti ti-brand-facebook text-[#1CB9C8] bg-[#b0f8ff] rounded-full p-3 text-2xl hover:text-white hover:bg-[#09e7fc] transition ease-in-out duration-300 md:text-4xl"></i></a></li>
